@model RatingListItem
@{
    ViewData["Title"] = "Remove Rating";
}

<h1 class="fw-bold text-center">Remove Rating</h1>

<form asp-action="Delete" method="post" class="text-center">
    <input asp-for="Id" hidden>

    <span class="text-warning" title="@Model.Score">
                @for (int i = 0; i < 5; i++)
                {
                    if (Model.Score - i >= 1)
                    {
                        <i class = "bi bi-star-fill"></i>
                    }
                    else if (Model.Score - i > 0)
                    {
                        <i class = "bi bi-star-half"></i>
                    }
                    else
                    {
                        <i class = "bi bi-star"></i>
                    }
                }
             </span>   
    <div class="mt-3 d-flex flex-column align-items-center">
        <input type="submit" value="Delete Rating" class="btn btn-primary mb-2">
        <a asp-controller="Restaurant" asp-action="Index" asp-route-itemid="@Model.Id"
        class="btn btn-link">Cancel</a>
    </div>
</form>



