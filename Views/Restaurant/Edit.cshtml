@model RestaurantEdit
@{
    ViewData["Title"] = "Edit" + Model.Name;
}

<h1>Edit @Model.Name</h1>
<hr>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Edit" class="row g-3">
    <input asp-for="Id" hidden disabled>
    <div class="col-md-6">
        <label asp-for="Name" class='form-label'></label>
        <input asp-for="Name" class="form-contrl">
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="col-md-6">
        <label asp-for="Location" class='form-label'></label>
        <input asp-for="Location" class="form-contrl">
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>
    <div class="col d-flex justify-content-between align-items-baseline">
        <a asp-action="Index" class="">Back to List ðŸ“ƒ</a>
        <input type="submit" value="Update" class="btn btn-primary">
    </div>

</form>

